%h1= @title
.container
  %table.table
    %thead
      %th salarié
      %th intitulé
      %th date
      %th peage
      %th parking
      %th gasoil
      %th tauxkm
      %th nombrekm
      %th montantkm
      %th autre infos
      %th divers
      %th Total
      %th Validé ?
    %tbody
      -total=totalpeage=totalparking=totalgasoil=totalmontantkm=totalmontant=0
      -@deplacements.each do |deplacement|
        %tr
          %td= deplacement.user.name
          %td= deplacement.title
          %td= deplacement.date
          %td= deplacement.peage
          %td= deplacement.parking
          %td= deplacement.gasoil
          %td= deplacement.tauxkm
          %td= deplacement.nombrekm
          %td= deplacement.tauxkm*deplacement.nombrekm if deplacement.tauxkm
          %td= deplacement.diver.info if deplacement.diver
          %td= deplacement.diver.montant if deplacement.diver
          %td= deplacement.total
        -total+=deplacement.total
        -totalpeage+=deplacement.peage
        -totalparking+=deplacement.parking
        -totalgasoil+=deplacement.gasoil
        -totalmontantkm+= (deplacement.tauxkm*deplacement.nombrekm) if deplacement.tauxkm
        -totalmontant+=deplacement.total