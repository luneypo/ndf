:javascript
  $(document).ready(function() { $("#deplacement_user_id").select2(); });
- unless @deplacement.diver
  = link_to "frais divers supplementaire?", deplacements_new_fraisdivers_path, class:'btn btn-primary'
  .field.form-group
    = f.label 'frais divers : non'
-else
  = link_to "pas de frais divers supplementaire?", new_deplacement_path, class:'btn btn-primary'
  .field.form-group
    = f.label 'frais divers : oui'
-if current_user.admin?
  .field.form-group
  = f.label :user_id
  %br/
  = f.collection_select :user_id, User.all, :id, :name
-else
  = f.hidden_field :user_id, :value => current_user.id
.field.form-group
  = f.label :Intitulé,class: 'form-label'
  %br/
  = f.text_field :title, autofocus: true, autocomplete: "title", class: "form-control"
.field.form-group
  = f.label :date
  %br/
  = f.date_select :date, autofocus: true, autocomplete: "date"

.field.form-group
  = f.label :vehicule_id,class: 'form-label'
  %br/
  = f.collection_select :vehicule_id, Vehicule.all, :id, :immatriculation, {:include_blank => true}, { class: "form-control", :'data-remote' => true, :'data-url'=>"/deplacements/getvehicule" }

#kmform.form-group

- if @deplacement.diver
  .field.form-group
    = f.label :diver,class: 'form-label'
    %br/
    = f.fields_for :diver do |d|
      .field.form-group
      = d.label :info,class: 'col-form-label'
      %br/
      = d.text_field :info,class: "form-control"
      .field.form-group
      = d.label :montant,class: 'col-form-label'
      %br/
      = d.text_field :montant,class: "form-control"

.actions
  = f.submit "Validé"


