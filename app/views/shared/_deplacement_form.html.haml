:javascript
  $(document).ready(function() { $("#deplacement_user_id").select2(); });

- unless @deplacement.diver
  = link_to "frais divers supplementaire?", deplacements_new_fraisdivers_path, class:'btn btn-primary'
-if current_user.admin?
  .field
  = f.label :user_id
  %br/
  = f.collection_select :user_id, User.all, :id, :name
-else
  = f.hidden_field :user_id, :value => current_user.id
.field
  = f.label :Intitulé
  %br/
  = f.text_field :title, autofocus: true, autocomplete: "title"
.field
  = f.label :date
  %br/
  = f.date_select :date, autofocus: true, autocomplete: "date"
.field
  = f.label :vehicule_id
  %br/
  = f.collection_select :vehicule_id, Vehicule.all, :id, :immatriculation

.field
  = f.label :nombrekm
  %br/
  = f.number_field :nombrekm, autofocus: true, autocomplete: "parking"
.field
  = f.label :gasoil
  %br/
  = f.number_field :gasoil, autofocus: true, autocomplete: "gasoil"

.field
  = f.label :peage
  %br/
  = f.number_field :peage, autofocus: true, autocomplete: "peage"
.field
  = f.label :parking
  %br/
  = f.number_field :parking, autofocus: true, autocomplete: "parking"
- if @deplacement.diver
  .field
    = f.label :diver
    %br/
    = f.fields_for :diver do |d|
      .field
      = d.label :info
      %br/
      = d.text_field :info
      .field
      = d.label :montant
      %br/
      = d.text_field :montant
- else
  .field
    = f.label 'frais divers : non'
.actions
  = f.submit "Validé"


