!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Testapp
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-inverse
      .navbar-header
        = link_to 'Test app', root_path, class: 'navbar-brand'
      #navbar
        %ul.nav.navbar-nav
          %li= link_to 'Home', root_path
          - if current_user.admin?
            %li= link_to 'Users', users_path
            %li= link_to 'Deplacements', deplacements_path
        - if user_signed_in?
          %ul.nav.navbar-nav.pull-right
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                = current_user.name
                %span.caret
              %ul.dropdown-menu{:role => "menu"}
                %li= link_to 'Profile', edit_user_registration_path
                %li= link_to 'Mes Deplacements',user_path(current_user)
                %li= link_to 'Nouveau Deplacement',new_deplacement_path
                %li= link_to 'Log out', destroy_user_session_path, method: :delete
        - else
          %ul.nav.navbar-nav.pull-right
            %li= link_to 'Log In', new_user_session_path

    .container
      -unless notice.nil?
        %p.notice.bg-success.text-center= notice
      -unless alert.nil?
        %p.alert.bg-danger.text-center= alert
    = yield
    = debug(params) if Rails.env.development?
